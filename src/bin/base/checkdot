#文件方式
# for i in $(ls ~ -A | grep '^\.'); do
#     got=1
#     while read line; do
#         [[ "$line" == "$i" ]] && { got=0; break; }
#     done < dot_template
#     [ "$got" == 1 ] && echo new one $i
# done

#数组方式
for i in $(ls ~ -A | grep '^\.'); do
    got=1
    for j in ${dot_templat[*]}; do
        [[ "$i" == "$j" ]] && { got=0; break; }
    done
    [ "$got" == 1 ] && echo new one $i
done

