#!/bin/bash

local_dir=/home/user/57

[ -d $local_dir ] && {
	echo 'user' | sudo umount $local_dir && rm -rf $local_dir
} || {
	mkdir $local_dir
	echo 'user' | sudo mount -t cifs //192.168.1.57/work/users/swdep/wgao /home/user/57 -o username=wgao_bj,rw,dir_mode=0777,file_mode=0777 || rm -rf $local_dir
}
unset local_dir

