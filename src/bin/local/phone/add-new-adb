#!/bin/bash

#添加新的设备 完整版

ADB=$(which adb)

t1=${1%%:*}
t2=${1#*:}

echo t1=$t1
echo t2=$t2
sudo echo \
"SUBSYSTEM==\"usb\", ATTRS{idVendor}==\"$t1\", ATTRS{idProduct}==\"$t2\",MODE=\"0666\"" \
>> "/etc/udev/rules.d/51-android-usb.rules"

echo "请重新插拔设备!"
sudo service udev restart
sudo $ADB kill-server
sudo $ADB start-server
sudo $ADB devices
# adb root (这一步很重要 )
echo "done!"
