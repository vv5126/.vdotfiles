#!/bin/bash

#添加新的设备 完整版

t1=${1%%:*}
t2=${1#*:}

echo t1=$t1
echo t2=$t2
echo \
"SUBSYSTEM==\"usb\", ATTRS{idVendor}==\"$t1\", ATTRS{idProduct}==\"$t2\",MODE=\"0666\"" \
>> "/etc/udev/rules.d/51-android-usb.rules"

echo "请重新插拔设备!"
service udev restart
adb kill-server
adb devices
# adb root (这一步很重要 )
echo "done!"
