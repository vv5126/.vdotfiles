#!/bin/bash

function htmldiff(){

src=$VGL_BOOKMARK

ls ~/bookmarks_*.html 2>/dev/null
if [ "$?" -ne 0 ]; then
    scp $LOCAL_HOST:~/mnt/57/bookmarks_*.html . 1>/dev/null 2>&1
    [ "$?" -ne 0 ] && exit
fi

dst=${1:-$(ls ~/bookmarks_*.html)}

out=./bookmarks_diff
tmp_add=htmladd
tmp_rm=htmlrm

[ -s $out ] && rm $out
[ -s $tmp_add ] && rm $tmp_add
[ -s $tmp_rm ] && rm $tmp_rm

[ ! -f "$dst" ] && exit

while read line_src; do
    if [[ "$line_src" =~ "HREF=" ]]; then
        # echo line_src = $line_src
        url=${line_src##*HREF=}
        url=${url%% *}
        # echo url ==== $url
        got=0
        while read line_dest; do
            if [[ "$line_dest" =~ "$url" ]]; then
                got=1
                break
            fi
        done < $dst
        if [ $got -eq 0 ]; then
            str=${line_src##*\"\>}
            str=${str%%\<\/*}
            # echo str = $str
            echo "rm >>> $str ($url)" >> $tmp_rm
        fi
    fi
done < $src

while read line_src; do
    if [[ "$line_src" =~ "HREF=" ]]; then
        # echo line_src = $line_src
        url=${line_src##*HREF=}
        url=${url%% *}
        # echo url ==== $url
        got=0
        while read line_dest; do
            if [[ "$line_dest" =~ "$url" ]]; then
                got=1
                break
            fi
        done < $src
        if [ $got -eq 0 ]; then
            str=${line_src##*\"\>}
            str=${str%%\<\/*}
            # echo str = $str
            echo "add >>> $str ($url)" >> $tmp_add
        fi
    fi
done < $dst

ret=0
[ -s $tmp_add ] && { ((ret+=1)); cat $tmp_add > $out; rm $tmp_add; }
[ -s $tmp_rm ] && { ((ret+=2)); cat $tmp_rm >> $out; rm $tmp_rm; }

return $ret

}

function htmlbak(){

src=$VGL_BOOKMARK
dst=${1:-$(ls ~/bookmarks_*.html)}
out=./bookmarks_diff

[ -f "$out" ] && rm "$out"

tmp_dir=${src%\/*}
tmp_file=${src##*\/}
mv $src $tmp_dir/.$tmp_file.bak

mv $dst $src

}


case "$1" in
    diff)
        htmldiff "$2"
        ;;
    bak)
        htmlbak "$2"
        ;;
    *)
        htmldiff
        ret=$?
        [ $ret == 0 ] && rm ~/bookmarks_*.html
        [ $ret == 1 ] && htmlbak
        [ $ret == 2 -o $ret == 3 ] && echo "please check it by hand~"
        ;;
esac
echo "$ret done!"
