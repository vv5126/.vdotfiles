export EDITOR="$(which vim)"
[[ $(uname -n) == 'ThinkPad-Yoga-260' ]] && {
    export PATH=$HOME/bin/python3.6/bin:$PATH
}
[[ $(uname -n) == 'lqchen-0B' ]] && {
    export PATH=~/.local/bin:$PATH
}

