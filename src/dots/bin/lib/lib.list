#!/bin/bash

# 为消息加个框 ***
function show_message(){
    local max=0
    for i in $1; do
        ((${#i} > $max)) && ((max=${#i}))
    done

    kuang=$(printf "%-"$(($max+4))"s" "*")

    echo -e "\e[40;33m"${kuang// /*}"\033[0m"
    for i in $1; do
        if [ $(($max-${#i})) -eq 0 ]; then
            echo -e "\e[40;33m"'*' "${i//_/ }" '*'"\033[0m"
        else
            end=$(printf "%-"$(($max-${#i}))"s" " ")
            echo -e "\e[40;33m"'*' "${i//_/ }" "${end// / }"'*'"\033[0m"
        fi
    done
    echo -e "\e[40;33m"${kuang// /*}"\033[0m"
}

# 带指示的输入
function get_input(){
    local input
    echo -en "$1 >>> " >&2
    read input
    [ -n "$input" ] && echo "$input"
}

#showlist file title
function showlist(){
    local NO=1 line i
    echo >&2
    while read line; do
	for i in $line; do
	    echo -e "  \e[40;33m$NO\033[0m >> \033[40;32m$i\033[0m">&2
	    NO=$[$NO+1]
	done
    done <&0
    echo >&2
}

function user_select() {
    local NUM=0 info="$1"

    set "$2"
    echo $@ | showlist
    NUM="$(get_input "$info")"

    expr $NUM + 0 &>/dev/null
    if [ $? -eq 0 ]; then
	echo "$(echo "$@" | sed -n '/^$/!p;' | sed -n $NUM'p;')"
    fi
}

function showlist_with_input(){
    local NUM=0
    local maybe_num="${@## *}"
    local file="$1"
    local tab="$2"
    local for_user="$3"

    include ~/.bin/lib/lib.vconf

    expr $maybe_num + 0 &>/dev/null
    if [ $? -eq 0 ]; then
	NUM=$maybe_num
    else
	vconf "$file" -c "$tab" | showlist
	NUM="$(get_input $for_user)"
    fi

    expr $NUM + 0 &>/dev/null
    [ $? -eq 0 ] && vconf "$file" -rn "$NUM"
}

function get_value_from_table() {
    local row=$2 column=$3
    echo "$(cat $1 | sed -n '/^#p\|^$/!p' | sed -n "$row p" | awk -F'|' "{print \$$column}" | awk 'gsub(/^ *| *$/,"")')"
}

