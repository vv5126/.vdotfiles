#!/bin/bash

in=$1

function ctof(){
        if [ $out -ge 1000000000 ]; then
                f=$(echo "scale=2; $out/1000000000" | bc)
                echo $f GHZ
        elif [ $out -ge 1000000 ]; then
                f=$(echo "scale=2; $out/1000000" | bc)
                echo $f MHZ
        elif [ $out -ge 1000 ]; then
                f=$(echo "scale=2; $out/1000" | bc)
                echo $f KHZ
        fi
        exit
}

function ftoc(){
        if [ $out -ge 1000000000 ]; then
                c=$(echo "scale=2; $out/1000000000" | bc)
                echo $c ns
        elif [ $out -ge 1000000 ]; then
                c=$(echo "scale=2; $out/1000000" | bc)
                echo $c us
        elif [ $out -ge 1000 ]; then
                c=$(echo "scale=2; $out/1000" | bc)
                echo $c ms
        fi
        exit
}

case "${in:0-2}" in
        'ns')
                in=${in%%ns}
                expr $in + 0 &>/dev/null
                [ $? -eq 0 ] && out=$((1000000000/$in))
                ctof
                ;;
        'us')
                in=${in%%us}
                expr $in + 0 &>/dev/null
                [ $? -eq 0 ] && out=$((1000000/$in))
                ctof
                ;;
        'ms')
                in=${in%%ms}
                expr $in + 0 &>/dev/null
                [ $? -eq 0 ] && out=$((1000/$in))
                ctof
                ;;
        *)
                ;;
esac

case "${in:0-3}" in
        'khz')
                in=${in%%khz}
                expr $in + 0 &>/dev/null
                [ $? -eq 0 ] && out=$((1000000/$in))
                echo 1
                ftoc
                ;;
        'mhz')
                in=${in%%mhz}
                expr $in + 0 &>/dev/null
                [ $? -eq 0 ] && out=$((1000/$in))
                echo 1
                ftoc
                ;;
        'ghz')
                in=${in%%ghz}
                expr $in + 0 &>/dev/null
                [ $? -eq 0 ] && out=$((1/$in))
                echo 1
                ftoc
                ;;
        *)
                ;;
esac


case "${in:0-2}" in
        'hz')
                in=${in%%hz}
                expr $in + 0 &>/dev/null
                [ $? -eq 0 ] && out=$((1000000000/$in))
                ftoc
                ;;
        *)
                ;;
esac
