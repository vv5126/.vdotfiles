#!/bin/bash

TITLE="Write"
retry=5

subject=$1
msg=$2

thunderbird -compose "to=429178931@qq.com,subject=$subject,body=$msg" 2>/dev/null &
while ! xdotool search --name "$TITLE"  mousemove 30 50 click 1; do
    sleep 1
    ((retry--)) || break
done </dev/null &>/dev/null
# echo retry = $retry
[ $retry -eq 0 ] && exit 1 || exit 0
