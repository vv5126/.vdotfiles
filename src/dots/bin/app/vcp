#!/bin/bash

include misc list vconf

if [ $# -eq 0 ]; then
	vconf -m "show-column" -c "dest" "$VGL_DATA/vcp.vconf" | showlist
	exit
fi

LAST="${!#}"

if [[ "$LAST" =~ "@" ]]; then # target
	DEST="$LAST"
	SKIP=1
	echo "$DEST" >> $VGL_DATA/vcp.vconf
else # normal file
	showlist_with_input $VGL_DATA/vcp.vconf "dest" "cp to" $@
	DEST="$dest"
	[ "$(is_num "$LAST")" -eq "1" ] && SKIP=1
fi

for i in "$@"; do
    [ -n "$SKIP" -a "$i" == "$LAST" ] || scp -r "$i" "$DEST"
done
