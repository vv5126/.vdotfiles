#文件方式
# for i in $(ls ~ -A | grep '^\.'); do
#     got=1
#     while read line; do
#         [[ "$line" == "$i" ]] && { got=0; break; }
#     done < dot_template
#     [ "$got" == 1 ] && echo new one $i
