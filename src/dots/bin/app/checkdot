#数组方式
for i in $(ls ~ -A | grep '^\.'); do
    got=1
    for j in ${dot_templat[*]}; do
        [[ "$i" == "$j" ]] && { got=0; break; }
    done
    [ "$got" == 1 ] && echo new one $i
done

