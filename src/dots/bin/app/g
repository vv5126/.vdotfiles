#!/bin/bash

include $VLIBS/lib.list

DEST=0

if [ $# -eq 1 ]; then
	expr $1 + 0 &>/dev/null
	if [ $? -eq 0 ]; then
		DEST=$(getline $VGL_DATA/go.conf $1)
	else
		if [[ "$1" =~ "@" ]]; then
			echo $1 >> $VGL_DATA/go.conf
			DEST=$1
		fi
	fi
else
	DEST=$(showlist $VGL_DATA/go.conf "go where ??")
fi

if [ "$DEST" != 0 ]; then
	ssh -X $DEST
else
	echo "wrong number"
	echo 
fi
