#!/bin/bash

if [ $# -eq 0 ]; then
    source ~/.cloner/.cloner_info 2>/dev/null
    if [ -z "$cloner_version" ]; then
	select var in $(ls -d ~/.cloner/*/ | sed -n '/^cloner-/p;') ;do
	    break
	done

	if [ -n "$var" ]; then
	    echo "cloner_version=$var" > ~/.cloner/.cloner_info
	    cloner_version="$var"
	fi
    fi
else
    (("$1"+1))
    if [ $? -eq 0 ]; then
	select="$1"
	if [ "$select" == '0' ]; then
	    select var in $(ls -d ~/.cloner/*/ | sed -n '/^cloner-/p;') ;do
		break
	    done
	else
	    var="$(ls -d ~/.cloner/*/ | sed -n '/^cloner-/p;' | head -$select | tail -1)"
	fi

	if [ -n "$var" ]; then
	    echo "cloner_version=$var" > ~/.cloner/.cloner_info
	    cloner_version="$var"
	fi
    fi
fi

if [ -n "$cloner_version" ]; then
    echo cloner_version: "$cloner_version"
    cd $HOME/.cloner/$cloner_version
    ./cloner
fi
