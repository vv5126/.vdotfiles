#!/bin/bash

source /backup/home/wgao/.profile

history_data=$VTMP/.bash_history
history_data_bak=$VTMP/.bash_history_bak

function del_vim_month_ago() {
    awk '$0=NR" "$0' .bash_history | sed -n '/^[0-9].* #[0-9].*$/p;' > z
    rm z;
}

function history_clean() {
    sed '/^  rm /d;' -i $1
    sed '/^  mr /d;' -i $1
    sed '/^  git rm /d;' -i $1
    sed '/^  ag /d;' -i $1
    sed '/^  mv /d;' -i $1
    sed '/^  du /d;' -i $1
    sed '/^  fd /d;' -i $1
    sed '/^  cd /d;' -i $1
    sed '/^  ls/d;' -i $1
    sed '/^  git /d;' -i $1
    sed '/^  ga /d;' -i $1
    sed '/^  gd /d;' -i $1
    sed '/^  gs /d;' -i $1
    sed '/^  man /d;' -i $1
    sed '/^  md /d;' -i $1
    sed '/^  mkdir /d;' -i $1
    sed '/^  iv /d;' -i $1
    sed '/^  which /d;' -i $1
    sed '/^  echo /d;' -i $1
    sed '/^  cp /d;' -i $1
    sed '/^  df /d;' -i $1
    sed '/^  meld /d;' -i $1
    sed '/^  builtin /d;' -i $1
    sed '/^  tree /d;' -i $1
    sed '/^  cat /d;' -i $1
    sed '/^  baidu /d;' -i $1
    sed '/^  file /d;' -i $1
    sed '/^  sh /d;' -i $1
    sed '/^  bash /d;' -i $1
    sed '/^  tree /d;' -i $1
    sed '/^  gitk/d;' -i $1
    sed '/^  vjson /d;' -i $1
    sed '/^  gcc /d;' -i $1
    sed '/^  g++ /d;' -i $1
    sed '/^  change_toolchain /d;' -i $1
    sed '/^  title /d;' -i $1
    sed '/^  vsync /d;' -i $1
    # sed '/^  \.\/ /d;' -i $1
    # sed -rn '/^.{0,7}$/!p' -i $1
    sed '/^  star /d;' -i $1
    sed '/^  tar /d;' -i $1

    > newtmp
    local out
    while read line; do
        out=1

        local cmd=${line%% *}
        if [ ${#cmd} -lt 10 ]; then
            type $cmd > /dev/null 2>&1
            if [ $? -ne 0 ]; then
                echo error -- $cmd
                out=0
            fi
            # [ $? -ne 0 ] && out=0
        fi

        [ "${line:0:1}" == "#" ] && { echo "$line" >> newtmp; out=0; }

        [ $out == 1 ] && echo "  $line" >> $2
    done < $1
}

function history_deal() {
    local tty
    local files="$(ls $VTMP/.bash_history_*)"

    for i in $files; do

        tty="${i##*_}"

        w | ag wgao | ag pts/$tty > /dev/null
        if [ $? -ne 0 ]; then
            # sed -n '/^#[0-9]\+/!p;' $i | awk '$0=NR" "$0' | sort --field-separator=" " --key=2 | uniq -f 1 | sort --human-numeric-sort - | sed -n 's/^[0-9]\+ /  /p;' >> $history_data
            # sed -n '/^#[0-9]\+/!p;' $i | sort | uniq | awk '$0="  "$0'  >> $history_data
            sed -n '/^#[0-9]\+/!p;' $i | sort | uniq > xxxtmp
            history_clean xxxtmp newtmp
            cat newtmp | awk '$0="  "$0'  >> $history_data
            echo "#$(date +%m)" >> $history_data

            echo rm $i >&2
            vrm xxxtmp newtmp $i
        fi
    done

    # mv all times to new.

    awk '$0=NR" "$0' $history_data | sed -n '/^[0-9].* #[0-9].*$/p;' > z
    awk '$0=NR" "$0' $history_data | sed -n '/^[0-9].* #[0-9].*$/!p;' | sort --field-separator=" " --key=2 | uniq -f 1 -u >> z
    awk '$0=NR" "$0' $history_data | sed -n '/^[0-9].* #[0-9].*$/!p;' | sort --field-separator=" " --key=2 | uniq -f 1 -D > y
    match=""
    l=""
    while read line; do
        if [ "$match" != "" ]; then
            next="${line#* }"
            nl="${line%% *}"

            if [ "$next" == "$match" ]; then
                l=$(($nl>$l?$nl:$l))
            else
                echo "$l $match" >> z
                match="$next"
                l="$nl"
            fi
        else
            match="${line#* }"
            l="${line%% *}"
        fi
    done < y
    echo "$l   $match" >> z
    cat z | sort --human-numeric-sort - | sed -n 's/^[0-9]\+ //p;' > $history_data
    rm y z
}

